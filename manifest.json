{
  "manifest_version": 3,
  "name": "GUC downloader",
  "version": "1.3",
  "description": "Downloads files from the GUC website with a readable name",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "GUC Downloader Settings"
  },
  "icons": {
    "16": "GUC_DOWNLOADER_LOGO.png",
    "48": "GUC_DOWNLOADER_LOGO.png",
    "128": "GUC_DOWNLOADER_LOGO.png"
  },
  "content_scripts": [
    {
      "matches": ["https://cms.guc.edu.eg/apps/student/*"],
      "js": ["content.js"]
    }
  ]
}
